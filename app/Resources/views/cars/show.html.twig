{% extends 'base.html.twig' %}

{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Make</th>
            <td>{{ car.make }}</td>
        </tr>
        <tr>
            <th>Model</th>
            <td>{{ car.model }}</td>
        </tr>
        <tr>
            <th>Travelled distance</th>
            <td>{{ car.travelledDistance }}</td>
        </tr>
        <tr>
            <th>Id</th>
            <td>{{ car.id }}</td>
        </tr>
        </tbody>
    </table>

    <div>
        <a href="{{ path('cars_index') }}">Back to the list</a>
    </div>
{% endblock %}

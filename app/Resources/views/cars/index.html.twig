{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cars list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Make</th>
                <th>Model</th>
                <th>Travelled Distance</th>
                <th>Id</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td><a href="{{ path('cars_show', { 'id': car.id }) }}">{{ car.make }}</a></td>
                <td>{{ car.model }}</td>
                <td>{{ car.travelledDistance }}</td>
                <td>{{ car.id }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
